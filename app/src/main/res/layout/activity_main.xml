<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    android:screenOrientation="landscape"
    tools:context="bluecontrol.game.olivato.bluetoothcontroller.MainActivity">

    <ImageView
        android:id="@+id/up"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/stop"
        android:layout_alignLeft="@+id/stop"
        android:layout_alignStart="@+id/stop"
        android:layout_marginBottom="20dp"
        android:onClick="clickerclicker"
        android:src="@mipmap/seta_cima" />

    <ImageView
        android:id="@+id/upright"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/upleft"
        android:layout_toEndOf="@+id/up"
        android:layout_toRightOf="@+id/up"
        android:onClick="clickerclicker"
        android:src="@mipmap/seta_diagonal_cima_direita" />

    <ImageView
        android:id="@+id/upleft"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_above="@+id/left"
        android:layout_toLeftOf="@+id/up"
        android:layout_toStartOf="@+id/up"
        android:onClick="clickerclicker"
        android:src="@mipmap/seta_diagonal_cima_esquerda" />

    <ImageView
        android:id="@+id/left"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_above="@+id/downleft"
        android:layout_toLeftOf="@+id/up"
        android:layout_toStartOf="@+id/up"
        android:onClick="clickerclicker"
        android:src="@mipmap/seta_esquerda" />

    <ImageView
        android:id="@+id/downleft"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/stop"
        android:layout_toLeftOf="@+id/down"
        android:layout_toStartOf="@+id/down"
        android:adjustViewBounds="false"
        android:onClick="clickerclicker"
        android:src="@mipmap/seta_diagonal_baixo_esquerda" />

    <ImageView
        android:id="@+id/down"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/stop"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/left"
        android:layout_toRightOf="@+id/left"
        android:onClick="clickerclicker"
        android:src="@mipmap/seta_baixo" />

    <ImageView
        android:id="@+id/downright"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/stop"
        android:layout_toEndOf="@+id/down"
        android:layout_toRightOf="@+id/down"
        android:onClick="clickerclicker"
        android:src="@mipmap/seta_diagonal_baixo_direita" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_above="@+id/downright"
        android:layout_toEndOf="@+id/stop"
        android:layout_toRightOf="@+id/stop"
        android:onClick="clickerclicker"
        android:src="@mipmap/seta_direita" />

    <ImageView
        android:id="@+id/stop"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="clickerclicker"
        android:src="@mipmap/volante" />

</RelativeLayout>
